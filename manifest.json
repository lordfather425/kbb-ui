{
  "name": "Kelly Blue Book Value",
  "version": "1.0",
  "description": "Displays Kelly Blue Book value based on the title of a posting",
  "manifest_version": 2,
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content.js"]
    }
  ],
  "permissions": ["http://*/*", "https://*/*"]
}
